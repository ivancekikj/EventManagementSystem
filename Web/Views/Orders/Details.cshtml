@model Domain.Dto.OrderDto
@if (User.IsInRole("Admin"))
{
    <p>Username: @Model.Order.ApplicationUser.UserName</p>
}
<p>Date Time Ordered: @Model.Order.DateTimeOrdered</p>
<p>Number of items: @Model.Order.PurchasedTickets.Count</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Event
            </th>
            <th>
                Schedule
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Discount
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Order.PurchasedTickets)
        {
            <tr>
                <td>
                    @ticket.Schedule.Event.Name
                </td>
                <td>
                    @ticket.Schedule.StartTime - @ticket.Schedule.EndTime
                </td>
                <td>
                    @ticket.Price
                </td>
                <td>
                    @ticket.Quantity
                </td>
                <td>
                    @ticket.Discount
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="ExportInvoice" asp-route-purchasedTicketId="@ticket.Id" class="btn btn-info">Create Invoice</a>
                    </td>
                }
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Total price:</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>$@Model.TotalPrice</th>
        </tr>
    </tfoot>
</table>